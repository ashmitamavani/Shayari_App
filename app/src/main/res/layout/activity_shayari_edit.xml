<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Shayari_Edit_Activity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="400dp">
           <TextView
               android:id="@+id/shayariedit"
               android:layout_width="match_parent"
               android:layout_height="500dp"
               android:text="Syayari"
               android:textColor="@color/white"
               android:textStyle="bold"
               android:gravity="center"
               android:background="#EF3B14"
               android:textSize="20dp"
               android:layout_marginVertical="70dp"
               android:layout_marginHorizontal="10dp"/>
       </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="@color/black"
        android:orientation="vertical">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_weight="1">
           <ImageView
               android:id="@+id/reload1"
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:src="@drawable/reload"
               android:background="@color/white"
               android:layout_marginLeft="150dp"
               android:padding="5dp"/>
           <ImageView
               android:layout_width="20dp"
               android:layout_height="50dp"
               android:background="@color/white"/>
           <ImageView
               android:id="@+id/expand1"
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:src="@drawable/expand"
               android:background="@color/white"
               android:padding="5dp"/>
       </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginVertical="5dp">
            <Button
                android:id="@+id/background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="Background"
                android:layout_marginLeft="8dp"
                android:backgroundTint="#F40606" />
            <Button
                android:id="@+id/textcolor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:textAllCaps="false"
                android:text="Textcolor"
                android:layout_weight="1"
                android:backgroundTint="#F40606" />
            <Button
                android:id="@+id/share"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAllCaps="false"
                android:layout_marginLeft="10dp"
                android:text="Share"
                android:layout_weight="1"
                android:backgroundTint="#F40606" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp">
            <Button
                android:id="@+id/font"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="Font"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#F40606" />
            <Button
                android:id="@+id/emoji"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:textAllCaps="false"
                android:text="Emoji"
                android:layout_weight="1"
                android:backgroundTint="#F40606" />
            <Button
                android:id="@+id/textsize"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:textAllCaps="false"
                android:text="Textsize"
                android:layout_weight="1"
                android:backgroundTint="#F40606" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>